generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Prehistoric {
    name              String
    id                Int         @id @default(autoincrement())
    age               String
    description       String      @db.VarChar(1000)
    button            String
    assets            String
}

model LitographyAuthor {
    id                String      @id         @default(uuid())
    author            String
    nickname          String
    year              String
    proffession       String
    nationality       String?
    picture           String
    story             String      @db.VarChar(1000)
    artwork           LitographyArtwork[]
}

model LitographyArtwork {
    id                      String    @id             @default(uuid())
    title                   String
    image                   String
    category                String
    description             String    @db.VarChar(1000)
    litographyAuthorId      String
    litographyAuthor        LitographyAuthor @relation(fields: [litographyAuthorId], references: [id])
}
